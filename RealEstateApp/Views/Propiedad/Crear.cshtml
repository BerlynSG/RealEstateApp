@using RealEstateApp.Core.Application.ViewModels.Propiedad
@model SavePropiedadViewModel
@{
    bool editMode = !string.IsNullOrEmpty(Model.Codigo);
    ViewData["Title"] = editMode ? "Editar Propiedad" : "Crear Propiedad";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <form method="post" enctype="multipart/form-data" asp-controller="Propiedad"
                    asp-action="@(editMode ? "EditarPropiedad" : "CrearPropiedad")">
                        <div class="mb-3">
                            <label asp-for="TipoPropiedad" class="form-label">Tipo de Propiedad:</label>
                            <select asp-for="TipoPropiedad" class="form-control">
                                @if (Model.ListaTipoPropiedad != null)
                                {
                                    @foreach (var tipo in Model.ListaTipoPropiedad)
                                    {
                                        <option value="@tipo.Nombre">@tipo.Nombre</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="TipoPropiedad" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TipoVenta" class="form-label">Tipo de Venta:</label>
                            <select asp-for="TipoVenta" class="form-control">
                                @if (Model.ListaTipoVenta != null)
                                {
                                    @foreach (var tipoVenta in Model.ListaTipoVenta)
                                    {
                                        <option value="@tipoVenta.Nombre">@tipoVenta.Nombre</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="TipoVenta" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Valor" class="form-label">Precio:</label>
                            <input asp-for="Valor" class="form-control" />
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción:</label>
                            <input asp-for="Descripcion" class="form-control" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Tamaño" class="form-label">Tamaño (metros):</label>
                            <input asp-for="Tamaño" class="form-control" />
                            <span asp-validation-for="Tamaño" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Habitaciones" class="form-label">Habitaciones:</label>
                            <input asp-for="Habitaciones" class="form-control" />
                            <span asp-validation-for="Habitaciones" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Baños" class="form-label">Baños:</label>
                            <input asp-for="Baños" class="form-control" />
                            <span asp-validation-for="Baños" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Mejoras" class="form-label">Mejoras:</label>
                            <select asp-for="Mejoras" class="form-control" multiple>
                                @if (Model.ListaMejora != null)
                                {
                                    @foreach (var mejora in Model.ListaMejora)
                                    {
                                        <option value="@mejora.Nombre">@mejora.Nombre</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="Mejoras" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Imagenes" class="form-label">Imágenes (máximo 4):</label>
                            <input type="file" name="Imagenes" accept="image/*" multiple class="form-control-file" />
                            <span asp-validation-for="Imagenes" class="text-danger"></span>
                        </div>

                        @if (editMode)
                        {
                            <input type="hidden" asp-for="Codigo" />
                        }

                        <button type="submit" class="btn btn-primary">
                            @(editMode ? "Guardar Cambios" : "Crear Propiedad")
                        </button>
                        <a asp-action="Index" class="btn btn-warning">Volver atrás</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
