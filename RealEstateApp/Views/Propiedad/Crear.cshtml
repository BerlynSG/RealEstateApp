@using RealEstateApp.Core.Application.ViewModels.Propiedad
@model SavePropiedadViewModel
@{
    bool editMode = !string.IsNullOrEmpty(Model.Codigo);
    ViewData["Title"] = editMode ? "Editar Propiedad" : "Crear Propiedad";
    string[] mejoras;
    if (!string.IsNullOrEmpty(Model.Mejoras))
        mejoras = Model.Mejoras.Split(",");
    else
        mejoras = new string[0];
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" enctype="multipart/form-data" asp-controller="Propiedad"
                  asp-action="@(editMode ? "EditarPropiedad" : "CrearPropiedad")">
                <div class="card">
                    <div class="card-header bg-dark text-light">
                        <h4>@ViewData["Title"]</h4>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <div class="mb-3">
                            <label asp-for="TipoPropiedadId" class="form-label">Tipo de Propiedad:</label>
                            <select asp-for="TipoPropiedadId" class="form-control">
                                @foreach (var tipo in Model.ListaTipoPropiedad)
                                {
                                    <option value="@tipo.Id">@tipo.Nombre</option>
                                }
                            </select>
                            <span asp-validation-for="TipoPropiedadId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TipoVentaId" class="form-label">Tipo de Venta:</label>
                            <select asp-for="TipoVentaId" class="form-control">
                                @foreach (var tipoVenta in Model.ListaTipoVenta)
                                {
                                    <option value="@tipoVenta.Id">@tipoVenta.Nombre</option>
                                }
                            </select>
                            <span asp-validation-for="TipoVentaId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Valor" class="form-label">Precio:</label>
                            <input asp-for="Valor" class="form-control" />
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción:</label>
                            <textarea asp-for="Descripcion" class="form-control"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Tamaño" class="form-label">Tamaño (metros):</label>
                            <input asp-for="Tamaño" class="form-control" />
                            <span asp-validation-for="Tamaño" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Habitaciones" class="form-label">Cantidad de Habitaciones:</label>
                            <input asp-for="Habitaciones" class="form-control" />
                            <span asp-validation-for="Habitaciones" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Baños" class="form-label">Cantidad de Baños:</label>
                            <input asp-for="Baños" class="form-control" />
                            <span asp-validation-for="Baños" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Mejoras" class="form-label">Mejoras: </label>
                            <input type="hidden" id="mejoras" asp-for="Mejoras" class="form-control" />
                            <div class="form-control overflow-auto" style="max-height: 100px;">
                                @foreach (var mejora in Model.ListaMejora)
                                {
                                    <div class="form-check">
                                        <input name="m-@mejora.Id" id="m-@mejora.Id" onchange="añadirMejora(@mejora.Id)"
                                            class="form-check-input" type="checkbox"
                                            @(mejoras.Contains(mejora.Id + "") ? "checked" : "") />
                                        <label class="form-check-label" for="m-@mejora.Id">@mejora.Nombre</label>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="Mejoras" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ImagenesFiles" class="form-label">Imágenes (máximo 4):</label>
                            <input type="file" asp-for="ImagenesFiles" accept="image/*" multiple class="form-control" />
                            <span asp-validation-for="ImagenesFiles" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Codigo" />
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            @(editMode ? "Guardar Cambios" : "Crear Propiedad")
                        </button>
                        <a asp-controller="Propiedad" asp-action="Index" asp-route-id="1" class="btn btn-warning">Volver atrás</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
