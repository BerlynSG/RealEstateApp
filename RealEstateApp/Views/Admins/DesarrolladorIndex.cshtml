@using RealEstateApp.Core.Application.ViewModels.User
@using RealEstateApp.Core.Application.ViewModels.Agente
@using Microsoft.AspNetCore.Http
@using RealEstateApp.Core.Application.Dtos.Account
@using RealEstateApp.Core.Application.Helpers;
@using RealEstateApp.Core.Application.Enums
@inject IHttpContextAccessor httpContextAccessor
@{
    var User = httpContextAccessor.HttpContext.Session.Get<AuthenticationResponse>("user");
}

@model ListaAgenteViewModel
@{
    ViewData["Title"] = "Mantenimiento de Desarrolladores";
}

<div class="row">
    <div class=" col-md-10 mx-auto">
        <div class="container pt-5 p-5 bg-dark rounded-3">
            <div class="d-flex justify-content-between mb-3 text-dark">
                <h2 class="text-white">DESARROLLADORES</h2>
                <a asp-controller="Admins" asp-action="RegisterDesarrollador" class="btn btn-lg btn-success mt-2 text-light mt-2 mb-2"><i class='bx bxs-user-plus'></i> Registrar desarollador</a>
            </div>
            <table id="table-invited" class=" table table-dark table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Usuario</th>
                        <th scope="col">Cedula</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Estado</th>
                        <th class="text-center" scope="col">Editar</th>
                        <th class="text-center" scope="col">Cambiar estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (AgenteViewModel user in Model.Agentes)
                    {
                        <tr class="table-light">
                            <td>@user.Nombre</td>
                            <td>@user.Apellidos</td>
                            <td>@user.UserName</td>
                            <td>@user.Cedula</td>
                            <td>@user.Correo</td>
                            <td>@(user.EmailConfirmed ? "Activo" : "Inactivo")</td>
                            <td>
                                @if (User != null && user.Id != User.Id)
                                {
                                    <a asp-controller="Admins" asp-action="EditDesarrollador" asp-route-id="@user.Id" class="btn btn-sm btn-warning"><i class='bx bx-edit'></i></a>
                                }
                            </td>
                            <td>
                                @if (user.Id != User.Id)
                                {
                                    <a onclick='mostrarModalSimple("CambiarModal", "CambiarCodigo", "@user.Id")' class="btn btn-sm btn-@(user.EmailConfirmed ? "primary" : "danger")">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                        </svg>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="CambiarModal" tabindex="-1" aria-labelledby="CambiarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-controller="Admins" asp-action="ActivateUser">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="CambiarModalLabel">Cambiar Estado</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input id="CambiarCodigo" asp-for="SearchTerm" hidden />
                    <input type="hidden" asp-for="tipo" />
                    <p>¿Desea cambiar el estado de este agente?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-primary">Sí</button>
                </div>
            </form>
        </div>
    </div>
</div>
