@using RealEstateApp.Core.Application.ViewModels.User


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstateApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RealEstateApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Propiedad" asp-action="Index" asp-route-id="0">RealEstateApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Propiedad" asp-action="Index" asp-route-id="0">Home</a>
                        </li>
                        <!--No está cuando eres agente-->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Agente" asp-action="Index">Agentes</a>
                        </li>
                        <!--Esto es para el agente-->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Usuario" asp-action="MiPerfil">Mi Perfil</a>
                        </li>
                        <!--Esto es para el cliente-->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Propiedad" asp-action="Favoritos">Mis Propiedades</a>
                        </li>
                        <!--Esto es para el agente-->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Propiedad" asp-action="Index" asp-route-id="1">Mantenimiento de Propiedades</a>
                        </li>
                        <!--Esto es para cuando no estás logeado-->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Únete a la app</a>
                        </li>
                        <!--Esto es para cuando estás logeado-->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Iniciar Sesión</a>
                        </li>
                        <li class="nav-item align-content-end">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="LogOut">Cerrar Sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - RealEstateApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
